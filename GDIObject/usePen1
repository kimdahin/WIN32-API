hPen = CreatePen(PS_SOLID, 5, RGB(0, 0, 0));
            hOldPen = (HPEN)SelectObject(hdc, hPen);
            MoveToEx(hdc, 200, 200, NULL);
            LineTo(hdc, 300, 200);
            //생성한 펜을 제거
            DeleteObject(hPen);

            hPen = (HPEN)GetStockObject(BLACK_PEN);
            SelectObject(hdc, hPen);
            MoveToEx(hdc, 400, 200, NULL);
            LineTo(hdc, 500, 200);
            //다시 지정. 원래 상태로 지정
            SelectObject(hdc, hOldPen);
